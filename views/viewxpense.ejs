<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Expenses</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <nav>
      <div>
        <a href="/">ExpenseTracker</a>
        <a href="/update">Update</a>
        <a href="/delete">Delete</a>

        <a href="/logout">Logout</a>
        <a href="/">Dashboard</a>
      </div>
    </nav>

    <table>
      <tr>
        <th>Title</th>
        <th>Amount</th>
        <th>Category</th>
        <th>Date</th>
      </tr>
      <% allExpense.forEach(exp => { %>
      <tr>
        <td><%= exp.title %></td>
        <td>â‚¹<%= exp.amount %></td>
        <td><%= exp.category %></td>
        <td><%= exp.date ? new Date(exp.date).toDateString() : "N/A" %></td>
      </tr>
      <% }) %>
    </table>
    <table>
      <tr>
        <th>Category</th>
        <th>Total</th>
      </tr>
      <% category.forEach(cat => { %>
      <tr>
        <td><%= cat._id %></td>
        <td><%= cat.totalexpense %></td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
